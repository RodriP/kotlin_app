<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            tools:layout_editor_absoluteY="73dp" tools:layout_editor_absoluteX="26dp" android:id="@+id/item_thumbnail"/>
    <TextView
            android:text="TextView"
            android:layout_toRightOf="@+id/item_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="80dp"
            tools:layout_editor_absoluteX="175dp" android:id="@+id/item_title"/>
    <TextView
            android:text="TextView"
            android:layout_below="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/item_thumbnail"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="118dp"
            tools:layout_editor_absoluteX="175dp" android:id="@+id/item_price"/>
</RelativeLayout>